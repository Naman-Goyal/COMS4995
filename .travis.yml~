
language: python
python:
  - 3.7
cache: pypi

install:
  - pip install flake8 
  - coverage run -m pytest
  - coverage report
  - coverage xml
  - pip install scipy


script:
  - flake8 --ignore=F405,F401,F811,F403,E501
  - coverage run -m pytest 

after_success:
  - codecov
branches:
  only:
  - master
