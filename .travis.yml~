  - 3.7
cache: pypi

install:
  - pip install flake8
  

script:
  - python -m flake8 VR/
  - pytest VR/test_auth.py/
  
after_success:
        - bash <(curl -s https://codecov.io/bash)
        - cat codecov.yml | curl --data-binary @- https://codecov.io/validate

branches:
  only:
  - master


